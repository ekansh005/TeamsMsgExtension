{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.10/MicrosoftTeams.schema.json",
  "manifestVersion": "1.10",
  "id": "{{APPLICATION_ID}}",
  "version": "1.0.0",
  "packageName": "{{PACKAGE_NAME}}",
  "developer": {
    "name": "Codeterian",
    "websiteUrl": "https://{{PUBLIC_HOSTNAME}}",
    "privacyUrl": "https://{{PUBLIC_HOSTNAME}}/privacy.html",
    "termsOfUseUrl": "https://{{PUBLIC_HOSTNAME}}/tou.html"
  },
  "name": {
    "short": "Planet Messaging",
    "full": "Planet Messaging"
  },
  "description": {
    "short": "TODO: add short description here",
    "full": "TODO: add full description here"
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#D85028",
  "configurableTabs": [],
  "staticTabs": [],
  "bots": [],
  "connectors": [],
  "composeExtensions": [{
    "botId": "{{MICROSOFT_APP_ID}}",
    "canUpdateConfiguration": false,
    "commands": [{
      "id": "planetExpanderAction",
      "type": "action",
      "title": "Planet Expander",
      "description": "Lookup the details of a planet.",
      "context": [
        "compose",
        "message"
      ],
      "fetchTask": true
    }, {
      "id": "planetLookupMessageExtension",
      "type": "query",
      "title": "Planet Lookup",
      "description": "Search for a planet.",
      "context": ["compose"],
      "initialRun": false,
      "parameters": [{
        "name": "searchKeyword",
        "description": "Enter 'inner','outer' or the name of a specific planet",
        "title": "Planet"
      }]
    }]
  }],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "{{PUBLIC_HOSTNAME}}"
  ],
  "showLoadingIndicator": false
}